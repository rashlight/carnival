<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Carnival">
        <addColumn tableName="CRASH_MUL_RESULT">
            <column name="TIME_" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="Carnival">
        <addColumn tableName="FIGHTER_RESULT">
            <column name="TIME_" type="DATETIME"/>
        </addColumn>

        <addNotNullConstraint columnName="TIME_" defaultNullValue="current_timestamp" tableName="FIGHTER_RESULT"/>
    </changeSet>
    <changeSet id="3" author="Carnival">
        <addColumn tableName="CRASH_MUL_RESULT">
            <column name="USER_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="USER_ID" tableName="CRASH_MUL_RESULT"/>
    </changeSet>
    <changeSet id="4" author="Carnival">
        <addColumn tableName="FIGHTER_RESULT">
            <column name="USER_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="USER_ID" tableName="FIGHTER_RESULT"/>
    </changeSet>
    <changeSet id="5" author="Carnival">
        <addColumn tableName="SESSION_">
            <column name="USER_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="USER_ID" tableName="SESSION_"/>
    </changeSet>
    <changeSet id="6" author="Carnival">
        <createIndex indexName="IDX_CRASH_MUL_RESULT_USER" tableName="CRASH_MUL_RESULT">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="CRASH_MUL_RESULT"
                                 constraintName="FK_CRASH_MUL_RESULT_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="7" author="Carnival">
        <createIndex indexName="IDX_FIGHTER_RESULT_USER" tableName="FIGHTER_RESULT">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="FIGHTER_RESULT"
                                 constraintName="FK_FIGHTER_RESULT_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="8" author="Carnival">
        <createIndex indexName="IDX_SESSION__USER" tableName="SESSION_">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="SESSION_" constraintName="FK_SESSION__ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="9" author="Carnival">
        <addNotNullConstraint columnDataType="INT" columnName="ENEMY_DELTA" tableName="FIGHTER_RESULT" validate="true"/>
    </changeSet>
    <changeSet id="10" author="Carnival">
        <addNotNullConstraint columnDataType="DOUBLE" columnName="FINAL_MULTIPLIER" tableName="CRASH_MUL_RESULT"
                              validate="true"/>
    </changeSet>
    <changeSet id="11" author="Carnival">
        <addNotNullConstraint columnDataType="BOOLEAN" columnName="IS_PLAYER_STOP" tableName="CRASH_MUL_RESULT"
                              validate="true"/>
    </changeSet>
    <changeSet id="12" author="Carnival">
        <addNotNullConstraint columnDataType="UUID" columnName="MATCH_ID" tableName="CRASH_MUL_RESULT" validate="true"/>
    </changeSet>
    <changeSet id="13" author="Carnival">
        <addNotNullConstraint columnDataType="DOUBLE" columnName="MULTIPLIER" tableName="CRASH_MUL_RESULT"
                              validate="true"/>
    </changeSet>
    <changeSet id="14" author="Carnival">
        <addNotNullConstraint columnDataType="DOUBLE" columnName="MULTIPLIER" tableName="GUESS_NUM_RESULT"
                              validate="true"/>
    </changeSet>
    <changeSet id="15" author="Carnival">
        <addNotNullConstraint columnDataType="BIGINT" columnName="POINTS_GIVEN" tableName="CRASH_MUL_RESULT"
                              validate="true"/>
    </changeSet>
</databaseChangeLog>