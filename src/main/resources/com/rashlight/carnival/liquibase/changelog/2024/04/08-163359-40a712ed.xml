<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Carnival">
        <addColumn tableName="CRASH_MUL_RESULT">
            <column name="FINAL_MULTIPLIER" type="DOUBLE"/>
            <column name="IS_PLAYER_STOP" type="BOOLEAN"/>
            <column name="MATCH_ID" type="UUID"/>
            <column name="MULTIPLIER" type="DOUBLE"/>
            <column name="POINTS_GIVEN" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="Carnival">
        <addColumn tableName="SESSION_">
            <column name="GAME_TYPE" type="INT"/>
        </addColumn>

        <addNotNullConstraint columnName="GAME_TYPE" tableName="SESSION_"/>
    </changeSet>
    <changeSet id="3" author="Carnival">
        <dropColumn columnName="GAME_ID" tableName="SESSION_"/>

        <dropColumn columnName="GAME_RESULT_ID" tableName="SESSION_"/>
    </changeSet>
    <changeSet id="4" author="Carnival">
        <dropColumn columnName="ENEMY_DELTA" tableName="FIGHTER_RESULT"/>

        <dropColumn columnName="FRIENDLY_DELTA" tableName="FIGHTER_RESULT"/>
    </changeSet>
    <changeSet id="5" author="Carnival">
        <addColumn tableName="FIGHTER_RESULT">
            <column name="ENEMY_DELTA" type="INT"/>
            <column name="FRIENDLY_DELTA" type="INT">
                <constraints nullable="false" validateNullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>