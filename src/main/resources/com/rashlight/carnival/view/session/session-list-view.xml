<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://sessionListView.title"
      focusComponent="sessionsDataGrid">
    <data>
        <collection id="sessionsDc"
                    class="com.rashlight.carnival.entity.Session">
            <fetchPlan extends="_base"/>
            <loader id="sessionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Session_ e]]>
                </query>
            </loader>
        </collection>
        <instance id="sessionDc"
                  class="com.rashlight.carnival.entity.Session">
            <fetchPlan extends="_base"/>
            <loader id="sessionDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="sessionsDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="readBtn" action="sessionsDataGrid.read"/>
                    <simplePagination id="pagination" dataLoader="sessionsDl"/>
                </hbox>
                <dataGrid id="sessionsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="sessionsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="read" type="list_read"/>
                    </actions>
                    <columns resizable="true">
                        <column property="gameType"/>
                        <column property="matchId"/>
                        <column property="pointsChange"/>
                        <column property="time"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectBtn" action="selectAction"/>
                    <button id="discardBtn" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="sessionDc">
                    <textField id="gameIdField" property="gameType"/>
                    <textField id="matchIdField" property="matchId"/>
                    <textField id="pointsChangeField" property="pointsChange"/>
                    <dateTimePicker id="timeField" property="time"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveBtn" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
